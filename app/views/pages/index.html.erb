<input type="text" ng-model="search">
<ul ng-if="dirList.toggle">
    <li ng-repeat="item in dirList.list | filter:search" ng-include="'<%= asset_url('person.html') %>'">
    </li>
</ul>
<button ng-hide="dirList.toggle" ng-click="dirList.toggle = true" type="button" name="button">Show Names</button>
<button ng-hide="!dirList.toggle" ng-click="dirList.toggle = false" type="button" name="button">Hide Names</button>
<form ng-submit="dirList.addPerson()">
    <input type="text" placeholder="Name" ng-model="dirList.name">
    <input type="number" placeholder="Age" ng-model="dirList.age">
    <input type="submit" value="submit">
</form>
